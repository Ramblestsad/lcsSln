    "tasks": [
        // Scratch
        {
            "label": "dotnet build Scratch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "/property:GenerateFullPaths=true"
                // "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/Scratch"
            }
        },
        {
            "label": "dotnet run Scratch",
            "command": "dotnet",
