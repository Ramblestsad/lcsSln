{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build Scratch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "run Scratch",
            "command": "dotnet",
            "type": "process",
            "args": ["run"],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "watch Scratch",
            "command": "dotnet",
            "type": "process",
            "args": ["watch", "run"],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
